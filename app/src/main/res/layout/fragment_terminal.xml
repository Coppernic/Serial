<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="fr.coppernic.sample.serial.SerialActivity">

    <Button
        android:id="@+id/btnOpenClose"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/open"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/spBdt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:entries="@array/baudrates"
        app:layout_constraintLeft_toRightOf="@+id/btnOpenClose"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/btnOpenClose"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnOpenClose"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/spBdt"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnOpenClose"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/btnOpenClose"
        android:layout_marginTop="8dp"/>

    <ListView
        android:id="@+id/listview1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenClose"
        app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextView"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:imeActionLabel="@string/send"
        android:cursorVisible="true"
        android:imeOptions="actionSend"
        android:inputType="textNoSuggestions"
        android:textCursorDrawable="@null"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview1"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
