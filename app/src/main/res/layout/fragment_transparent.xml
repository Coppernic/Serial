<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="fr.coppernic.sample.serial.SerialActivity">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:text="@string/local_serial_port"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonOpenClose"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:text="@string/remote_serial_port"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinBdtLocal"
        app:layout_constraintLeft_toRightOf="@+id/buttonOpenClose"
        android:layout_marginLeft="8dp"/>

    <Spinner
        android:id="@+id/spinBdtLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:entries="@array/baudrates"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/buttonOpenClose"
        android:layout_marginLeft="8dp"/>

    <Spinner
        android:id="@+id/spinPortLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/spinBdtLocal"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/spinBdtLocal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinBdtLocal"
        android:layout_marginBottom="8dp"
        />

    <Spinner
        android:id="@+id/spinBdtRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:entries="@array/baudrates"
        app:layout_constraintLeft_toRightOf="@+id/buttonOpenClose"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <Spinner
        android:id="@+id/spinPortRemote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/spinBdtRemote"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/spinBdtRemote"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinBdtRemote"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:id="@+id/buttonOpenClose"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/open"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinBdtRemote"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.515"/>

    <View
        android:id="@+id/divider"
        android:layout_width="384dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinBdtRemote"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"/>

</android.support.constraint.ConstraintLayout>
